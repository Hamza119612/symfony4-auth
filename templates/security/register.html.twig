{# security/index.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} } ) }}
    <div class="col-md-offset-2 col-md-8 text-center">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Create an account
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        {{ form_label(form.username, null, {'label_attr': {'class': 'control-label col-md-3'}} ) }}
                        <div class="col-md-6">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}} ) }}
                            {{ form_errors(form.username) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'control-label col-md-3'}} ) }}
                        <div class="col-md-6">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}} ) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password.first, null, {'label_attr': {'class': 'control-label col-md-3'}} ) }}
                        <div class="col-md-6">
                            {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}} ) }}
                            {{ form_errors(form.password.first) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password.second, null, {'label_attr': {'class': 'control-label col-md-3'}} ) }}
                        <div class="col-md-6">
                            {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}} ) }}
                            {{ form_errors(form.password.second) }}
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                    <button type="submit" class="btn btn-primary center-block"> Submit </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}